<%
  rental = Rental.find(@rentalID)
  product = Product.find(rental[:product_id])
  
  if(@action == "edit")
%> 

      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>Edit Rental</h3>
    </div>
    <div class="modal-body">
    <h3 style="margin-bottom: 15px;" id="editRental_name"><%=product.title%></h3>
      <a class="btn" id="editRental_start_btn" href="#"><i class="icon-calendar"></i>From</a>
      <input id="editRental_start" class="input-small" type="text" value="<%=rental.deliveryDate%>"/>
      <a style="margin-left: 5px;" id="editRental_end_btn" class="btn" href="#"><i class="icon-calendar"></i>To</a>
      <input id="editRental_end" class="input-small" type="text" value="<%=rental.pickupDate%>"/>
    </div>
    <div class="modal-footer">
      <a href="javascript:void(null);" class="btn" data-dismiss="modal">Close</a>
      <a href="javascript:void(null);" id='editRental_save_btn' class="btn btn-primary">Save changes</a>
    </div>
    
<% elsif(@action == "delete") %>

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>Delete Rental</h3>
    </div>
    <div class="modal-body">
    <h3 style="margin-bottom: 15px;" ><Product Name><%=product.title%></h3>
    </div>
    <div class="modal-footer">
      <a href="javascript:void(null);" class="btn" data-dismiss="modal">Cancel</a>
      <a href="javascript:void(null);" id='deleteRental_btn' class="btn btn-danger">Remove Rental</a>
    </div>

<% end %>